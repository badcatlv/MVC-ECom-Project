@using EComMVC.Models
@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Products</h1>
@if (Model.Count == 0)
{
    <p>No Products</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id">Details</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
}