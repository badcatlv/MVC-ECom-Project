@using EComMVC.Models
@model List<Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Product";
}

<div>
    <h1>Products</h1>
    @if (Model.Count == 0)
    {
        <p>No Products</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Details</a> |
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<p><a asp-controller="Product" asp-action="Create">Create New</a></p>